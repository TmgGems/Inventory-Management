<div class="container mt-4">
    <h1 class="text-center">Customer Details</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#customerModal" data-bind="click: setCreateMode">
        Add New Customer
    </button>

    <div class="modal fade" id="customerModal" tabindex="-1" aria-labelledby="customerModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="customerModalLabel">
                        <span data-bind="ifnot: IsUpdated">Add New Customer</span>
                        <span data-bind="if: IsUpdated">Update Customer</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @* data-bind="click: CloseModel" *@></button>
                </div>
                <div class="modal-body" data-bind="with:NewCustomer">
                    <form>
                        <div class="form-group">
                            <label for="fullName">Full Name:</label>
                            <input type="text" class="form-control" id="fullName" placeholder="Enter your full name"
                                   data-bind="value: fullName" />
                            
                        </div>
                        <div class="form-group">
                            <label for="contactNumber">Contact Number:</label>
                            <input type="text" class="form-control" id="contactNumber" placeholder="Enter your contact number"
                                   data-bind="value: contactNo" />
                           
                        </div>
                        <div class="form-group">    
                            <label for="address">Address:</label>
                            <input type="text" class="form-control" id="address" placeholder="Enter your address"
                                   data-bind="value: address" />
                            
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" data-bind="click:$root.AddCustomer">
                        <span data-bind="ifnot: IsUpdated" >Create</span>
                        <span data-bind="if: IsUpdated">Update</span>
                    </button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>S.N</th>
                <th>Name</th>
                <th>Contact Info</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:CustomerList">
            <tr>
                <td data-bind="text: $index() + 1"></td>
                <td data-bind="text:fullName"></td>
                <td data-bind="text:contactNo"></td>
                <td data-bind="text:address"></td>
                <td>
                    <button data-bind="click: $root.SelectCustomer" class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#customerModal">Edit</button>
                    <button data-bind="click: $root.DeleteCustomer" class="btn btn-sm btn-danger">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the customer <span data-bind="text: customerToDelete() ? customerToDelete().fullName() : ''"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" data-bind="click: confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>

